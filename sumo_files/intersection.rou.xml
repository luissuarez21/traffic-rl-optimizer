<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    
    <!-- Vehicle Type Definition -->
    <vType id="car" accel="2.6" decel="4.5" sigma="0.5" length="5" minGap="2.5" maxSpeed="13.89" guiShape="passenger"/>
    
    <!-- Routes (paths through the intersection) -->
    <!-- North to South (straight through) -->
    <route id="N_S" edges="N2C C2S"/>
    <!-- North to East (left turn) -->
    <route id="N_E" edges="N2C C2E"/>
    
    <!-- East to West (straight through) -->
    <route id="E_W" edges="E2C C2W"/>
    <!-- East to South (left turn) -->
    <route id="E_S" edges="E2C C2S"/>
    
    <!-- South to North (straight through) -->
    <route id="S_N" edges="S2C C2N"/>
    <!-- South to West (left turn) -->
    <route id="S_W" edges="S2C C2W"/>
    
    <!-- West to East (straight through) -->
    <route id="W_E" edges="W2C C2E"/>
    <!-- West to North (left turn) -->
    <route id="W_N" edges="W2C C2N"/>
    
    <!-- Vehicle Flows (spawn rates) -->
    <!-- Flow from North: 1 car every 5 seconds -->
    <flow id="flow_N_S" type="car" route="N_S" begin="0" end="3600" probability="0.10"/>
    <flow id="flow_N_E" type="car" route="N_E" begin="0" end="3600" probability="0.05"/>
    
    <!-- Flow from East -->
    <flow id="flow_E_W" type="car" route="E_W" begin="0" end="3600" probability="0.10"/>
    <flow id="flow_E_S" type="car" route="E_S" begin="0" end="3600" probability="0.05"/>
    
    <!-- Flow from South -->
    <flow id="flow_S_N" type="car" route="S_N" begin="0" end="3600" probability="0.10"/>
    <flow id="flow_S_W" type="car" route="S_W" begin="0" end="3600" probability="0.05"/>
    
    <!-- Flow from West -->
    <flow id="flow_W_E" type="car" route="W_E" begin="0" end="3600" probability="0.10"/>
    <flow id="flow_W_N" type="car" route="W_N" begin="0" end="3600" probability="0.05"/>
    
</routes>